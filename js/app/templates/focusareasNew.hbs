<div class="">
    <div class="col-md-6 col-md-offset-3">
        <form role="form-control">
            <div class="panel panel-info">
                <div class="panel-heading">
                    {{t focusareas.new.heading}}
                </div>
                <div class="panel-body">
                    {{x-notify}}
                    <div class="form-group">
                        <label>{{t focusareas.new.definition}}</label>
                        {{textarea class="form-control" value=definition id="definition" rows="6" placeholder="Inhold..."}}
                        <br/>
                        {{view Ember.Select
                            content=availableThemes
                            optionValuePath="content.id"
                            optionLabelPath="content.definition"
                            classNames="focusarea-theme form-control"
                            valueBinding="selectedTheme"
                        }}
                    </div>
                </div>
                <div class="panel-footer">
                    <button {{action submit}} class="submit-button btn btn-default">{{t focusareas.new.create}}</button>
                    <button {{action cancel}} class="cancel-button btn btn-default">{{t focusareas.edit.cancel}}</button>
                </div>
            </div>
        </form>
    </div>
</div>
