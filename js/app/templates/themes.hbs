<div>
    {{#link-to 'themes.new' class="add-theme btn btn-primary"}}
        {{t themes.index.add}}
    {{/link-to}}
</div>
<br/>
<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{t themes.index.definition}}</th>
            </tr>
            </thead>
            <tbody>
            {{#each theme in model}}
                <tr>
                    <td class="theme-definition">
                        {{#link-to 'themes.edit' theme}}
                            {{theme.definition}}
                        {{/link-to}}
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
