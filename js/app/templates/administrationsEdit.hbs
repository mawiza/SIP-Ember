<div class="">
    <div class="col-md-6 col-md-offset-3">
        <form role="form-control">
            <div class="panel panel-info">
                <div class="panel-heading">
                    Redigere forvaltningen
                </div>
                <div class="panel-body">
                    {{x-notify}}
                    <div class="form-group">
                        <label for="exampleInputEmail1">Navn</label>
                        {{input type="text" class="form-control" value=name id="name" placeholder="Navn..."}}
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Farve</label>
                        {{input type="text" class="form-control" value=color id="color" placeholder="Farve..."}}
                    </div>
                </div>
                <div class="panel-footer">
                    <button {{action update}} class="update-button btn btn-default">Opdatere</button>
                    <button {{action delete}} class="delete-button btn btn-default">Slet</button>
                </div>
            </div>
        </form>
    </div>
</div>

