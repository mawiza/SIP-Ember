<div class="">
    <div class="col-md-6 col-md-offset-3">
        <form role="form-control">
            <div class="panel panel-info">
                <div class="panel-heading">
                    {{t administrations.edit.heading}}
                </div>
                <div class="panel-body">
                    {{x-notify}}
                    <div class="form-group">
                        <label>{{t administrations.edit.name}}</label>
                        {{input type="text" class="form-control" value=name id="name" placeholder="Navn..."}}
                    </div>
                    <div class="form-group">
                        <label>{{t administrations.edit.color}}</label>
                        {{input class="color-picker form-control" value=color id="color" placeholder="Farve..."}}
                        {{view App.ColorPicker}}
                    </div>
                </div>
                <div class="panel-footer">
                    <button {{action update}} class="update-button btn btn-default">{{t administrations.edit.update}}</button>
                    <button data-toggle="modal" data-target="#delete-administration" class="btn btn-default">{{t administrations.edit.delete}}</button>
                    <button {{action cancel}} class="cancel-button btn btn-default">{{t administrations.edit.cancel}}</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div id="delete-administration" role="dialog" class="modal fade" aria-hidden="true">
    <div class="modal-dialog" style="width:400px">
        <div class="modal-content"  style="width:400px">
            <div class="modal-header modal-warning">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{t administrations.edit.delete}}</h4>
            </div>
            <div class="modal-body">
                <p>{{t administrations.edit.modal.info}} </p>
            </div>
            <div class="modal-footer">
                <button {{action delete}} data-dismiss="modal" class="delete-button btn btn-danger">{{t administrations.edit.delete}}</button>
                <button class="cancel-button btn btn-default" data-dismiss="modal">{{t administrations.edit.cancel}}</button>
            </div>
        </div>
    </div>
</div>