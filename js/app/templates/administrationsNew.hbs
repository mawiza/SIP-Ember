<div class="">
    <div class="col-md-6 col-md-offset-3">
        <form role="form-control">
            <div class="panel panel-info">
                <div class="panel-heading">
                    {{t administrations.new.heading}}
                </div>
                <div class="panel-body">
                    {{x-notify}}
                    <div class="form-group">
                        <label>{{t administrations.new.name}}</label>
                        {{input class="form-control" value=name id="name" placeholder="Navn..."}}
                    </div>
                    <div class="form-group">
                        <label>{{t administrations.new.color}}</label>
                        {{input type="text" class="form-control" value=color id="color" placeholder="Farve..."}}
                        {{view App.ColorPicker}}
                    </div>
                </div>
                <div class="panel-footer">
                    <button {{action submit}} class="submit-button btn btn-default">{{t administrations.new.create}}</button>
                    <button {{action cancel}} class="cancel-button btn btn-default">{{t administrations.edit.cancel}}</button>
                </div>
            </div>
        </form>
    </div>
</div>

