<div class="panel panel-default">
    <div class="panel-heading">
        <div>
            <h4>
                {{t administrations.index.heading}}
            </h4>
            {{#link-to 'administrations.new' class="pull-right add-administration btn-sm btn-primary"}}
                <span class="glyphicon glyphicon-plus"></span>
            {{/link-to}}
        </div>
    </div>
    <div class="panel-body">
        <br>
        <table class="table table-striped">
            <tbody>
            {{#each administration in controller}}
                <tr>
                    <td class="administration-name">
                        {{#link-to 'administrations.edit' administration}}
                            {{administration.name}}
                        {{/link-to}}
                    </td>
                    <td class="administration-color">
                        <span class="pull-right label label-default" {{bind-attr style=administration.style}}>{{administration.color}}</span>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
