<div>
    {{#link-to 'administrations.new' class="add-administration btn btn-primary"}}
        {{t administrations.index.add}}
    {{/link-to}}
</div>
<br/>
<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{t administrations.index.name}}</th>
                <th>{{t administrations.index.color}}</th>
            </tr>
            </thead>
            <tbody>
            {{#each administration in model}}
                <tr>
                    <td class="administration-name">
                        {{#link-to 'administrations.edit' administration}}
                            {{administration.name}}
                        {{/link-to}}
                    </td>
                    <td class="administration-color"><span class="label label-default" {{bind-attr style=administration.style}}>{{administration.color}}</span></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
